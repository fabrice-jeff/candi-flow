{% extends 'base.html.twig' %}

{% block title %} New outil informatique{% endblock %}


{% block breadcrumb_title %}
    <div class="page-header">
        <h1 class="page-title">Ajouter un outil informatique</h1>
        <div>
            <ol class="breadcrumb">
                <a href="{{ path('app_niveau_etude_index') }}" class="table-hover btn btn-primary">Retour</a>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="mt-5 float-end">
                            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    
{% endblock %}
