{% extends 'base.html.twig' %}

{% block title %}Domaine index{% endblock %}

{% block content %}
    
    
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Libelle</th>
                            <th>Date de cr√©ation</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for domaine in domaines %}
                            <tr>
                                <td>{{ domaine.libelle }}</td>
                                <td>{{ domaine.createdAt ? domaine.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_domaine_show', {'id': domaine.id}) }}">show</a>
                                    <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block breadcrumb_title %}
    <div class="page-header">
        <h1 class="page-title">Liste domaine</h1>
        <div>
            <ol class="breadcrumb">
                <a href="{{ path('app_domaine_new') }}" class="table-hover btn btn-primary">Ajouter un domaine de formation</a>
            </ol>
        </div>
    </div>
{% endblock %}

