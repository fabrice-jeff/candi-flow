{% extends 'base.html.twig' %}

{% block title %}Poste index{% endblock %}


{% block breadcrumb_title %}
    <div class="page-header">
        <h1 class="page-title">Outils informatiques pour le poste {{ poste.libelle }}</h1>
        <div>
            <ol class="breadcrumb">
                <a href="{{ path('app_poste_index') }}" class="table-hover btn btn-primary">Retour</a>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.libelle) }}
                    <div class="mt-5 float-end">
                        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Libelle</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for outil_informatique in outils_informatiques %}
                                <tr>
                                    <td>{{ outil_informatique.libelle }}</td>
                                    <td class="text-center">
                                        <div class="btn-group dropend">
                                            <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item">Modifier</a></li>
                                                <li><a class="dropdown-item">Supprimer</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}
